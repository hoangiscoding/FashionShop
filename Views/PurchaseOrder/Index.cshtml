@model IEnumerable<FashionShop.Models.DonHang>


@{
    ViewData["Title"] = "Purchase Orders Listing";
    SortModel sortModel = (SortModel)ViewData["sortModel"];
    PagerModel pager = ViewBag.Pager;
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">


<div class="container-fluid btn-group">
    <div class="col-10">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-2 justify-content-end">
        <p>
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </p>
    </div>
</div>




<br />


<div class="row">
    <div class="col-12">
        <partial name="_topBar" model="@pager" />
    </div>
</div>


<table class="table">
    <thead>
        <tr>


            <th>
                <i class="@sortModel.GetColumn("MaDonHang").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("MaDonHang").SortExpression">
                    P.No
                </a>
            </th>

            <th>
                <i class="@sortModel.GetColumn("NgayTao").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("NgayTao").SortExpression">
                    @Html.DisplayNameFor(model => model.NgayTao)
                </a>
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.POCurrency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TyGiaHoiDoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiamGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaBaoGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayBaoGia)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.GhiChu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDonHang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayTao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.MaNCC)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.POCurrency.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TyGiaHoiDoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiamGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaBaoGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayBaoGia)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.GhiChu)
                </td>
                <td>

                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.MaDonHang">
                            <span class="btn btn-sm btn-outline-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                            </span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.MaDonHang">
                            <span class="btn btn-sm btn-outline-dark">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.MaDonHang">
                            <span class="btn btn-sm btn-outline-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </span>
                        </a>
                    </div>




                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-12">
        <partial name="_bottomBar" model="@pager" />
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}