@model IEnumerable<FashionShop.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm";

    SortModel sortModel = (SortModel)ViewData["sortModel"];

    PagerModel pager = ViewBag.Pager;
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">


<div class="container-fluid btn-group">
    <div class="col-10">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-2 justify-content-end">
        <p>
            <a asp-action="Create" class="btn btn-success">Tạo mới</a>
        </p>
    </div>
</div>

<br />


<div class="row">
    <div class="col-12">
        <partial name="_topBar" model="@pager" />
    </div>
</div>


<table class="table">
    <thead>
        <tr>

            <th>
                <i class="@sortModel.GetColumn("Code").SortIcon" arial-hidden="true"></i>

                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("Code").SortExpression">
                    @Html.DisplayNameFor(model => model.MaSP)
                </a>
            </th>

            <th>Ảnh</th>
            <th>
                <i class="@sortModel.GetColumn("image").SortIcon" aria-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("image").SortExpression">
                    @Html.DisplayNameFor(model => model.ProductPhoto)
                </a>
            </th>

            <th>
                <i class="@sortModel.GetColumn("name").SortIcon" arial-hidden="true"></i>

                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("name").SortExpression">
                    @Html.DisplayNameFor(model => model.TenSP)
                </a>
            </th>
            <th>

                <i class="@sortModel.GetColumn("MoTa").SortIcon" arial-hidden="true"></i>

                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("MoTa").SortExpression">
                    @Html.DisplayNameFor(model => model.MoTa)
                </a>
            </th>


            <th>
                <i class="@sortModel.GetColumn("DonGiaNhap").SortIcon" arial-hidden="true"></i>

                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("DonGiaNhap").SortExpression">
                    @Html.DisplayNameFor(model => model.DonGiaNhap)
                </a>
            </th>

            <th>
                <i class="@sortModel.GetColumn("DonGiaBan").SortIcon" arial-hidden="true"></i>

                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("DonGiaBan").SortExpression">
                    @Html.DisplayNameFor(model => model.DonGiaBan)
                </a>
            </th>


            <th>
                <i class="@sortModel.GetColumn("DonVi").SortIcon" arial-hidden="true"></i>

                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("DonVi").SortExpression">
                    @Html.DisplayNameFor(model => model.DonVi)
                </a>
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>

            <td>
                    <img src="@(string.IsNullOrEmpty(item.Anh) ? "/images/noimage.png" : item.Anh)"
                         alt="Product Image"
                         style="width: 50px; height: auto;"
                         onerror="this.onerror=null;this.src='/images/noimage.png';" />
            </td>           

            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DonGiaNhap)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DonGiaBan)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DonVi.TenDonVi)
            </td>

            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.MaSP">
                        <span class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </span>
                    </a>

                    <a asp-action="Details" asp-route-id="@item.MaSP">
                        <span class="btn btn-sm btn-outline-dark">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </span>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.MaSP">
                        <span class="btn btn-sm btn-outline-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </span>
                    </a>

                </div>
            </td>
        </tr>
        }
    </tbody>
</table>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


