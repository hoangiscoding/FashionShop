@model FashionShop.Models.Supplier

@{
    ViewData["Title"] = "Details";
}
<h1>Supplier Details</h1>
<div>
    <hr />

    <input type="hidden" asp-for="MaNCC" />   

    <div class="form-group">
        <label asp-for="MaNCC" class="control-label"></label>
        <input asp-for="MaNCC" class="form-control" readonly />        
    </div>

    <div class="form-group">
        <label asp-for="TenNCC" class="control-label"></label>
        <input asp-for="TenNCC" class="form-control" readonly />        
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" readonly />        
    </div>

    <div class="form-group">
        <label asp-for="SDT" class="control-label"></label>
        <input asp-for="SDT" class="form-control" readonly />        
    </div>

    <div class="form-group">
        <label asp-for="DiaChi" class="control-label"></label>
        <textarea asp-for="DiaChi" class="form-control" rows="4" readonly></textarea>        
    </div>



</div>
<div class="btn-group">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.MaNCC">Edit</a>
    <a class="btn btn-secondary" asp-action="index"
       asp-route-pg="@TempData["CurrentPage"]">Back</a>    
</div>
